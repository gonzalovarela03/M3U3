<!--inicio de novedades -->
<div class="row my-3">
    <div id="novedades" class="col-md-5 offset-md-2 py-3 scroll_section">
        <h2>Novedades</h2>
        <ul class="lista-novedades">
            {{#each novedades}}
            <li><a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal{{id}}"> <img src="images/novedades01.jpg">{{titulo}}</a></li>
            {{/each}}        
        </ul>
    </div>
    <!--fin de novedades -->

    <!--inicio de modal -->
    {{#each novedades}}
    <div class="modal fade" tabindex="-1" id="exampleModal{{id}}">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{titulo}}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h2>{{subtitulo}}</h2>
                    <p>{{cuerpo}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <!--fin  de modal -->
    <!--inicio testimonios -->
    <div class="col-md-3 my-3">
        <div class="rounded py-5 testimonios">
            <h2 class="text-center">Testimonios</h2>
